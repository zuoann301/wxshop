.banner {
  width: 750rpx;
  height:1070rpx;
}

.banner image {
  width: 100%;
  height: 1070rpx;
}
.a-section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin-top: 20rpx;
}

.a-section .h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.a-section .h .txt {
  padding-right: 30rpx;
  background-size: 16.656rpx 27rpx;
  display: inline-block;
  height: 36rpx;
  font-size: 45rpx;
  line-height: 36rpx;
  font-weight:bold;
}

.img{
  width: 100%;
  height: 917rpx;
}

.mt{
  width:95%;
  line-height:50rpx;
  font-size:30rpx;
  padding:10rpx 25rpx 10rpx 25rpx;
  text-indent:2em;
  border-bottom:1px solid #eee;
  margin-left:20rpx;
  margin-right:20rpx;
}

.no_indent{
  text-indent:0em;
}